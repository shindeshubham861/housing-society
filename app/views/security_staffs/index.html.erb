      <th><b style="font-size: 17px">Daily task</b></th>
      <th></th>

        </tr>
  </thead>

  <tbody>
    <% @security_staffs.each do |security_staff| %>
      <tr>
        <td><%= security_staff.staff_info %></td>
        <td><%= security_staff.guard_name %></td>
        <td><%= security_staff.salary %></td>
        <td><%= security_staff.work_timing %></td>
        <td><%= security_staff.daily_task %></td>
        <td><%= link_to 'Edit', edit_security_staff_path(security_staff),class: "btn btn-success" %><button id="<%= security_staff.id %>" class="btn btn-danger"  onclick="test(this.id)">Destroy</button></td>
      </tr>
    <% end %>
  </tbody>
</table>
