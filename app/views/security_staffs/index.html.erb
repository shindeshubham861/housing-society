<table id="example" class="table table-striped table-bordered" style="width:100%">
  <thead>
    <tr>
      <th><b style="font-size: 17px">Staff info</b></th>
      <th><b style="font-size: 17px">Guard name</b></th>
      <th><b style="font-size: 17px">Salary</b></th>
