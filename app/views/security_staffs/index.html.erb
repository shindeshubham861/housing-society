 <p id="notice"><%= notice %></p>

  <div class="feturedsection">
    <h1 class="text-center"><span class="bdots">&bullet;</span>S E C U R I T Y<span class="carstxt">S T A F F</span>&bullet;</h1>
  </div>


<div class="row">
 <div class="col-md-12 col-lg-12 col-sm-12 col-xs-12">

<div class="content table-responsive table-full-width">
<table class="table table-hover table-striped table-responsive table-bordered js-basic-example dataTable">
  <thead>
    <tr>
      <th><b style="font-size: 17px">Staff info</b></th>
      <th><b style="font-size: 17px">Guard name</b></th>
      <th><b style="font-size: 17px">Salary</b></th>
      <th><b style="font-size: 17px">Work timing</b></th>
      <th><b style="font-size: 17px">Daily task</b></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @security_staffs.each do |security_staff| %>
      <tr>
        <td><b><%= security_staff.staff_info %></b></td>
        <td><b><%= security_staff.guard_name %></b></td>
        <td><b><%= security_staff.salary %></b></td>
        <td><b><%= security_staff.work_timing %></b></td>
        <td><b><%= security_staff.daily_task %></b></td>
        <td><%= link_to 'Edit', edit_security_staff_path(security_staff),class: "btn btn-success" %></td>        
        <td><button id="<%= security_staff.id %>" class="btn btn-danger"  onclick="test(this.id)">Destroy</button></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>
</div>

<script type="text/javascript">
  function test(ida)
  {
    location.href= "/security_staff/"+ida;
  }
</script>