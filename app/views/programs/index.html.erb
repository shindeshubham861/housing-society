 <p id="notice"><%= notice %></p>

  <div class="feturedsection">
    <h1 class="text-center"><span class="bdots">&bullet;</span>P R O G R A M S<span class="carstxt">O R G A N I Z E D</span>&bullet;</h1>
  </div>


<table id="example" class="table table-striped table-bordered" style="width:100%">
  <thead>

      <th>Program name</th>
      <th>Description</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Amount</th>
      <th>Timing</th>
      <th></th>

  </thead>

  <tbody>
    <% @programs.each do |program| %>
      <tr>
        <td><%= program.program_name %></td>
        <td><%= program.description %></td>
        <td><%= program.start_date %></td>
        <td><%= program.end_date %></td>
        <td><%= program.amount %></td>
        <td><%= program.timing %></td>
        <td><%= link_to 'Edit', edit_program_path(program),class: "btn btn-success" %><button id="<%= program.id %>" class="btn btn-danger"  onclick="test(this.id)">Destroy</button></td>
      </tr>
      </tr>
    <% end %>
  </tbody>
</table>
 <%= link_to 'New Program', new_program_path,class: "btn btn-success" %>

<br>
<script type="text/javascript">
  $(document).ready(function() {
    $('#example').DataTable();
} );

</script>

<script type="text/javascript">
  function test(ida)
  {
    location.href= "/program/"+ida;
  }
</script>